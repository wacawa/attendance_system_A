<% if model.errors.any? %>
  <div id="error_explanation">
    <% if with_count = with_count.nil? %>
      <div class="alert alert-danger">
        入力エラー<%= model.errors.count %>件。
      </div>
    <% end %>
    <ul>
      <% model.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>