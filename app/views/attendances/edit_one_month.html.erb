<% provide(:title, @user.name) %>

<%= form_with(model: @user, url: attendances_update_one_month_user_path(date: @first_day), method: :patch, local: true) do |f| %>
  <div>
    <h1>勤怠編集画面</h1>
    <table class="table table-bordered table-condensed table-hover" id="table-attendances">
      <thead>
        <tr>
          <th>日付</th>
          <th>曜日</th>
          <th>出社</th>
          <th>退社</th>
          <th>翌日</th>
          <th>在社時間</th>
          <th>備考</th>                                        
          <th>指示者確認㊞</th>
        </tr>
      </thead>
      <tbody>
        <% @attendances.each do |day| %>
          <%= f.fields_for "attendances[]", day do |attendance| %>
            <tr>
              <td><%= l(day.worked_on, format: :short) %></td>
              <td><%= $days_of_the_week[day.worked_on.wday] %></td>
              <% if !login_user.admin? && (Date.current < day.worked_on) %>
                <td><div class="form-inline">
                  <%= attendance.time_select :started_at, { include_blank: "" }, { disabled: true, class: "form-control" } %>
                </div></td>
                <td><div class="form-inline">
                  <%= attendance.time_select :finished_at, { include_blank: "" }, { disabled: true, class: "form-control" } %>
                </div></td>
              <% else %>
                <td><div class="form-inline">
                  <%= attendance.time_select :started_at, { include_blank: "" }, { class: "form-control" } %>
                </div></td>
                <td><div class="form-inline">
                  <%= attendance.time_select :finished_at, { include_blank: "" }, { class: "form-control" } %>
                </div></td>
              <% end %>
              <td><%= f.check_box "checkbox#{day.id}" %></td>
              <td>
                <% if day.started_at.present? && day.finished_at.present? %>
                  <%= working_times(day.started_at, day.finished_at) %>
                <% end %>
              </td>
              <td><%= attendance.text_field :note, class: "form-control" %></td>
              <td><%= attendance.select :before_atts_edit_approval, @superiors.map { |s| [s.superior_name] }, {include_blank: ""}, {class: "form-control"} %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="center">
    <%= link_to "キャンセル", user_path(date: @first_day), class: "btn btn-lg btn-primary" %>
    <%= f.submit "編集を保存", class: "btn btn-lg btn-primary"%>
  </div>
<% end %>