<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td>
        <%= link_to "<--", user_path(date: @first_day.prev_month), class: "btn btn-primary mrgn-right5"%>
        <%= l(@first_day, format: :middle) %>の勤怠
        <%= link_to "-->", user_path(date: @first_day.next_month), class: "btn btn-primary mrgn-left5"%>
      </td>
      <td>
        <div>指定勤務開始時間：&nbsp;&nbsp;<%= l(@user.work_start_time, format: :time) %></div>
        <div>指定勤務終了時間：<%= l(@user.work_finish_time, format: :time) %></div>
      </td>
      <td colspan="2">基本時間：<%= format_basic_info(@user.basic_work_time) %></td>
      <td>初日：<%= l(@first_day, format: :short) %></td>
    </tr>
    <tr>
      <td>所属：<%= @user.department.present? ? @user.department : "未所属" %></td>
      <td>名前：<%= @user.name %></td>
      <td>コード：<%= @user.employee_id %></td>
      <td>出勤日数：<%= @worked_sum %>日</td>
      <td>締め：<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<% if @user.superior %>
  <div class="mrgn-top10">
    <div>
      <%= link_to "[ 所属長承認申請のお知らせ ]", "#", class: "btn-default" %>
      <%= "#{sr}件の通知があります" if sr = @superior_request > 0 %>
    </div>
    <div>
      <%= link_to "[ 勤怠変更申請のお知らせ ]", "#", class: "btn-default" %>
      <%= "#{ar}件の通知があります" if ar = @att_edit_request > 0 %>
    </div>
    <div>
      <%= link_to "[ 残業申請のお知らせ ]", "#", class: "btn-default" %>
      <%= "#{otr}件の通知があります" if otr = @overtime_request > 0 %>
    </div>
  </div>
<% end %>

<div>
  <div class="mrgn-top10">
    <%= link_to "勤怠編集へ", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary"%>
    <%= link_to "CSV出力", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary"%>
  </div>
  <div class="mrgn-top5 mrgn-bottom10">
    <%= link_to "勤怠修正ログ(承認済)",
        attendances_log_user_path(date: @first_day, default_day: @first_day), remote: true, class: "btn btn-primary" %>
  </div>

  <div id="log" class="modal fade in" tabindex="-1" role="dialog" aria-hidden="true"></div>
</div>

<div>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <th rowspan="3"></th>
        <th rowspan="3">日付</th>
        <th rowspan="3">曜日</th>
        <th colspan="8">実績</th>
        <th colspan="5">所定外勤務</th>
      </tr>
      <tr>
        <th colspan="3">出社</th>
        <th colspan="3">退社</th>
        <th rowspan="2">在社時間</th>
        <th rowspan="2">備考</th>
        <th colspan="2">終了予定時間</th>
        <th rowspan="2">時間外時間</th>
        <th rowspan="2">業務処理内容</th>
        <th rowspan="2">指示者確認(印)</th>
      </tr>
      <tr>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
      </tr>
      <tr>
      </tr>
    </thead>

    <tbody>
      <% @attendances.each do |day| %>
        <tr>
          <td><%= link_to "残業申請", "#", class: "btn btn-primary" %></td>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td><%= $days_of_the_week[day.worked_on.wday] %></td>
          <td><%= l(day.started_at, format: :hour) if day.started_at.present? %></td>
          <td><%= l(day.started_at, format: :minutes) if day.started_at.present? %></td>
          <td>
            <% if btn_text = attendance_state(day, 0) %>
              <%= link_to "#{btn_text}", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance"%>
            <% end %>
          </td>
          <td><%= l(day.finished_at, format: :hour) if day.finished_at.present? %></td>
          <td><%= l(day.finished_at, format: :minutes) if day.finished_at.present? %></td>
          <td>
            <% if btn_text = attendance_state(day, 1) %>
              <%= link_to "#{btn_text}", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance"%>
            <% end %>
          </td>
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
              <%= str_time = working_times(day.started_at, day.finished_at) %>
              <% @total_working_times = @total_working_times.to_f + str_time.to_f %>
            <% end %>
          </td>
          <td><%= day.note %></td>
          <td><%= day.work_overtime %></td>
          <td><%= day.overtime_instructor %></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>

    <tfoot>
      <tr>
        <td rowspan="2"></td>
        <td colspan="2">累計日数</td>
        <td colspan="8">総合勤務時間</td>
        <td colspan="3">累計在社時間</td>
        <td rowspan="2"></td>
        <td rowspan="2">
          所属長承認 <%= @approval %>
          <div>
            <%= form_with url: attendances_before_approval_user_path(@user, date: @first_day), local: true, method: :patch do |f| %>
              <%= f.select :superior, @superiors.map { |s| [s.superior_name] }, {include_blank: ""}, {class: "form-control"} %>
              <%= f.submit "申請", class: "btn btn-primary btn-block mrgn-top5" %>
            <% end %>
          </div>
        </td>
      </tr>
      <tr>
        <td colspan="2"><%= @attendances.count %>日</td>
        <td colspan="8"><%= format_basic_info(@user.basic_work_time).to_f * @worked_sum %></td>
        <td colspan="3"><%= format("%.2f", @total_working_times.to_f) %></td>
      </tr>
    </tfoot>
  </table>

</div>

